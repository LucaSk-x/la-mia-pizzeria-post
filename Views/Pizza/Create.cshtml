@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo post</h1>
            </div>
            <form asp-controller="Post" asp-action="Create" method="post">
                <div class="mb-3">
                    <strong class="mb-2">Immagine:</strong>
                    <input asp-for="Image" class="d-block form-control w-100" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong class="mb-2">Titolo:</strong>
                    <input asp-for="Name" class="d-block form-control w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong class="mb-2">Contenuto:</strong>
                    <textarea asp-for="Description" rows="10" class="d-block form-control w-100"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>
